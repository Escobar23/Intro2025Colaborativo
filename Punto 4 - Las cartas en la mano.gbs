// 4.- A)

function primeraCartaDeLaMano_(mano) {
    /*
    proposito: describe la primera carta de la mano dada
    precondiciones: ninguna
    parametros:
    mano: Lista de Elementos
    tipo: Carta
    */

    return(primero(mano))
    

}

// 4.- B)

function segundaCartaDeLaMano_(mano) {
    /*
    prosposito: describe la segunda carta de la mano dada
    precondiciones:
    parametros:
    mano: Lista de Elementos
    tipo: carta
    */

    return(primero(resto(mano)))
}


// 4.- C)

function laMano_LuegoDeRobarUnaCartaDe_(mano,mazo) {
    /*
    proposito: describe la "mano" resultante luego de robar la primera carta del "mazo" 
    y agregarla a la mano del jugador
    precondiciones:
    parametros:
    mano: Lista de Elementos
    mazo: Lista de Elementos
    tipo: carta
    */

    return(cons(primero(mazo), mano))

}

